# Find a bundle
if [ $(arch | grep arm) ]; then
bottle="https://dl.bintray.com/autobrew/arm64_big_sur/unixodbc-2.3.9-arm64_big_sur.tar.xz"
elif [[ ${OSTYPE:6} -ge 20 ]]; then
bottle="https://dl.bintray.com/autobrew/big_sur/unixodbc-2.3.9-big_sur.tar.xz"
elif [[ ${OSTYPE:6} -ge 17 ]]; then
bottle="https://dl.bintray.com/autobrew/high_sierra/unixodbc-2.3.9-high_sierra.tar.xz"
else
bottle="https://dl.bintray.com/autobrew/el_capitan/unixodbc-2.3.7-el_capitan.tar.xz"
fi

# General setup
BREWDIR="$PWD/.autobrew"
mkdir -p $BREWDIR
curl -sSL $bottle -o libs.tar.xz
tar -xf libs.tar.xz --strip 1 -C $BREWDIR
rm -f libs.tar.xz

# package may look for /opt/unixodbc for include
mkdir -p $BREWDIR/opt
ln -s $BREWDIR $BREWDIR/opt/unixodbc

# Hardcoded flags
PKG_LIBS="-L$BREWDIR/lib -lodbc -lltdl"
PKG_CFLAGS="-I$BREWDIR/include"

# Hack for broken odbc configure script
touch "$BREWDIR/lib/nothing.dylib"
