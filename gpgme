# Find a bundle
if [ $(arch | grep arm) ]; then
bottle="https://dl.bintray.com/autobrew/arm64_big_sur/gpgme-1.15.0-arm64_big_sur.tar.xz"
elif [[ ${OSTYPE:6} -ge 20 ]]; then
bottle="https://dl.bintray.com/autobrew/big_sur/gpgme-1.15.0-big_sur.tar.xz"
elif [[ ${OSTYPE:6} -ge 17 ]]; then
bottle="https://dl.bintray.com/autobrew/high_sierra/gpgme-1.15.0-high_sierra.tar.xz"
else
bottle="https://dl.bintray.com/autobrew/el_capitan/gpgme-1.15.0-el_capitan.tar.xz"
fi

# General setup
BREWDIR="$PWD/.autobrew"
mkdir -p $BREWDIR
curl -sSL $bottle -o libs.tar.xz
tar -xf libs.tar.xz --strip 1 -C $BREWDIR
rm -f libs.tar.xz

# package may look in opt
mkdir -p $BREWDIR/opt
ln -s $BREWDIR $BREWDIR/opt/gpgme

# Hardcoded flags
PKG_CFLAGS="-I$BREWDIR/include"
PKG_LIBS="-L$BREWDIR/lib -lgpgme -lassuan -lgpg-error"

# Ship a standalone 'gpg'
mkdir -p inst/bin
cp -f $BREWDIR/bin/gpg1 inst/bin/gpg

